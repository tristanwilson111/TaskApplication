<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icaninteractive.tristan.taskapplication.MainActivity"
    tools:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/countdownText"
        android:layout_width="112dp"
        android:layout_height="39dp"
        android:textSize="21sp"
        app:layout_constraintRight_toLeftOf="@+id/frameLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/frameLayout"
        tools:layout_editor_absoluteY="0dp" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_goneMarginTop="20dp"
        android:id="@+id/frameLayout"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:foregroundGravity="center"
            android:src="@drawable/toothbrush" />

        <com.timqi.sectorprogressview.SectorProgressView
            android:id="@+id/spv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:bgColor="#00000000"
            app:fgColor="#58717171"
            app:percent="0" />

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="145dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Start"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
